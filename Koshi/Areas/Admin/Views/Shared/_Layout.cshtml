@using Vereyon.Web;
<!DOCTYPE html>
<html>
<head>
	<meta charset="utf-8" />
	<meta name="viewport" content="width=device-width, initial-scale=1.0">
	<title>@ViewBag.Title - Koshi</title>
	@Styles.Render("~/Content/css")
	@Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <!--Navigation bar-->
	<div class="navbar navbar-inverse navbar-fixed-top">
		<div class="container">
            <!-- Brand and toggle get grouped for better mobile display -->
			<div class="navbar-header">
				<button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
					<span class="icon-bar"></span>
					<span class="icon-bar"></span>
					<span class="icon-bar"></span>
				</button>
				@Html.ActionLink("Koshi", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
			</div>
            <!-- Collect the nav links, forms, and other content for toggling -->
			<div class="navbar-collapse collapse">
				<ul class="nav navbar-nav">
					<li>@Html.ActionLink("Category", "Index", "Categories", new { @Area = "Admin" }, new { })</li>
					<li>@Html.ActionLink("Product", "Index", "Products", new { @Area = "Admin" }, new { })</li>
					<li>@Html.ActionLink("Orders", "Index", "Orders", new { @Area = "Admin" }, new { })</li>
				</ul>
                <!-- /.navbar-collapse -->
			</div>
		</div>
	</div>
    <!-- End Navigation bar-->
	<div class="container body-content">
		<div style="margin-top:10px;">
			@Html.RenderFlashMessages()<!-- this syntax let alerts the flashing messages when before and after to action take  -->
		</div>

		@RenderBody()
		<hr />
		<footer>
			<p>&copy; @DateTime.Now.Year - My Koshi Online Shopping Project </p>
		</footer>
	</div>

	@Scripts.Render("~/bundles/jquery")
	@Scripts.Render("~/bundles/bootstrap")
	@RenderSection("scripts", required: false)
</body>
</html>
