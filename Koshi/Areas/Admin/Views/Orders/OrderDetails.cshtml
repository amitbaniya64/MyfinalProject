@model Koshi.Models.Order
@{
	ViewBag.Title = "OrderDetails";
}
<div class="container">
	<div class="row">
		<div class="col-md-10 col-md-offset-1">
            <!--showing panel view for  order information-->
			<div class="panel panel-default panel-table">
				<div class="panel-heading"style="background-color:aqua;">
					<div class="row">
						<div class="col col-xs-6">
							<h3 class="panel-title">Order Information</h3>
						</div>

					</div>
				</div>
				<div class="panel-body"style="background-color:blanchedalmond;">
					<table class="table table-striped table-bordered table-list">
						<thead>
							<tr>
								<th>
									@Html.DisplayNameFor(model => model.CustomerID)
								</th>
								<th>
									@Html.DisplayNameFor(model => model.OrderID)
								</th>
								<th>
									@Html.DisplayNameFor(model => model.SubTotal)

								</th>
								<th>
									@Html.DisplayNameFor(model => model.Tax)
								</th>
								<th>
									@Html.DisplayNameFor(model => model.Total)
								</th>
							</tr>
							</thead>
						<tbody>
							<tr>
								<td>
									@Html.DisplayFor(modelItem => Model.CustomerID)
								</td>

								<td>
									@Html.DisplayFor(modelItem => Model.OrderID)
								</td>
								<td>
									@Html.DisplayFor(modelItem => Model.SubTotal)
								</td>
								<td>
									@Html.DisplayFor(modelItem => Model.Tax)
								</td>
								<td>
									@Html.DisplayFor(modelItem => Model.Total)
								</td>

							</tr>
							</tbody>
                       </table>
					</div>
				</div>
            <!--ending the panel view for  order information-->
            <!--showing panel view for  order Item-->
			<div class="panel panel-default panel-table">
				<div class="panel-heading" style="background-color:aqua;">
					<div class="row">
						<div class="col col-xs-6">
							<h3 class="panel-title">Order Items</h3>
						</div>

					</div>
				</div>
				<div class="panel-body"style="background-color:blanchedalmond;">
					<table class="table table-striped table-bordered table-list">
						<thead>
							<tr>
								<th>
									@Html.DisplayNameFor(model => model.OrderItem.ToArray()[0].Product.ProductName)
								</th>
								<th>
									@Html.DisplayNameFor(model => model.OrderItem.ToArray()[0].Price)
								</th>
								<th>
									@Html.DisplayNameFor(model => model.OrderItem.ToArray()[0].Quantity)
								</th>
							</tr>
						</thead>
						<tbody>
							<tr>
								@foreach (var orderItem in Model.OrderItem)
			{
									<td>
										@Html.DisplayFor(model => orderItem.Product.ProductName)
									</td>
									<td>
										@Html.DisplayFor(model => orderItem.Price)
									</td>
									<td>
										@Html.DisplayFor(model => orderItem.Quantity)
									</td>
			}

							</tr>
						</tbody>
					</table>
				</div>
			</div>
            <!--ending panel view for  order item-->

            <!--showing panel view for  Customer information-->
			<div class="panel panel-default panel-table">
				<div class="panel-heading" style="background-color:aqua;">
					<div class="row">
						<div class="col col-xs-6">
							<h3 class="panel-title">Customer Information</h3>
						</div>

					</div>
				</div>
				<div class="panel-body"style="background-color:blanchedalmond;">
					<table class="table table-striped table-bordered table-list">
						<thead>
							<tr>

								<th>
									@Html.DisplayNameFor(model => model.Customer.FirstName)
								</th>
								<th>
									@Html.DisplayNameFor(model => model.Customer.LastName)
								</th>
								<th>
									@Html.DisplayNameFor(model => model.Customer.EmailAddress)
								</th>
								<th>
									@Html.DisplayNameFor(model => model.Customer.PhoneNumber)
								</th>
								<th>
									@Html.DisplayNameFor(model => model.Customer.Address)
								</th>

							</tr>
						</thead>
						<tbody>
							<tr>

								<td>
									@Html.DisplayFor(modelItem => modelItem.Customer.FirstName)
								</td>
								<td>
									@Html.DisplayFor(modelItem => modelItem.Customer.LastName)
								</td>
								<td>
									@Html.DisplayFor(modelItem => modelItem.Customer.EmailAddress)
								</td>
								<td>
									@Html.DisplayFor(modelItem => modelItem.Customer.PhoneNumber)
								</td>
								<td>
									@Html.DisplayFor(modelItem => modelItem.Customer.Address)
								</td>
							</tr>
						</tbody>
					</table>
				</div>
			</div>
            <!--end of panel view for  customer information-->
            <!--showing panel view for credit cart information-->
			<div class="panel panel-default panel-table">
				<div class="panel-heading" style="background-color:aqua;">
					<div class="row">
						<div class="col col-xs-6">
							<h3 class="panel-title">Credit Card Information</h3>
						</div>

					</div>
				</div>
				<div class="panel-body"style="background-color:blanchedalmond;">
					<table class="table table-striped table-bordered table-list">
						<thead>
							<tr>
								<th>
									@Html.DisplayNameFor(model => model.CreditCard.CustomerID)
								</th>
								<th>
									@Html.DisplayNameFor(model => model.CreditCard.CardNumber)
								</th>
								<th>
									@Html.DisplayNameFor(model => model.CreditCard.CardCCV)
								</th>
								<th>
									@Html.DisplayNameFor(model => model.CreditCard.CardType)
								</th>
								<th>
									@Html.DisplayNameFor(model => model.CreditCard.ExpirationMonth)
								</th>
								<th>
									@Html.DisplayNameFor(model => model.CreditCard.ExpirationYear)
								</th>
								<th>
									@Html.DisplayNameFor(model => model.CreditCard.CreditCardID)
								</th>

							</tr>
						</thead>
						<tbody>
							<tr>
								<td>
									@Html.DisplayFor(modelItem => modelItem.CreditCard.CreditCardID)
								</td>
								<td>
									@Html.DisplayFor(modelItem => modelItem.CreditCard.CardNumber)
								</td>
								<td>
									@Html.DisplayFor(modelItem => modelItem.CreditCard.CardCCV)
								</td>
								<td>
									@Html.DisplayFor(modelItem => modelItem.CreditCard.CardType)
								</td>
								<td>
									@Html.DisplayFor(modelItem => modelItem.CreditCard.ExpirationMonth)
								</td>
								<td>
									@Html.DisplayFor(modelItem => modelItem.CreditCard.ExpirationYear)
								</td>
								<td>
									@Html.DisplayFor(modelItem => modelItem.CreditCard.CreditCardID)
								</td>

							</tr>
						</tbody>
					</table>
				</div>
			</div>
            <!--end of panel view for  credit cart information-->
            <!--showing panel view for shipping address-->
			<div class="panel panel-default panel-table">
				<div class="panel-heading" style="background-color:aqua;">
					<div class="row">
						<div class="col col-xs-6">
							<h3 class="panel-title">Shipping Address</h3>
						</div>

					</div>
				</div>
				<div class="panel-body"style="background-color:blanchedalmond;">
					<table class="table table-striped table-bordered table-list">
						<thead>
							<tr>

								<th>
									@Html.DisplayNameFor(model => model.Address.AddressID)
								</th>
								<th>
									@Html.DisplayNameFor(model => model.Address.AddressLine)
								</th>
								<th>
									@Html.DisplayNameFor(model => model.Address.City)
								</th>
								<th>
									@Html.DisplayNameFor(model => model.Address.Country)
								</th>
								<th>
									@Html.DisplayNameFor(model => model.Address.State)
								</th>
								<th>
									@Html.DisplayNameFor(model => model.Address.Zip)
								</th>
							</tr>
						</thead>
						<tbody>
							<tr>
								<td>
									@Html.DisplayFor(model => model.Address.AddressID)
								</td>
								<td>
									@Html.DisplayFor(model => model.Address.AddressLine)
								</td>
								<td>
									@Html.DisplayFor(model => model.Address.City)
								</td>
								<td>
									@Html.DisplayFor(model => model.Address.Country)
								</td>
								<td>
									@Html.DisplayFor(modelItem => modelItem.Address.State)
								</td>
								<td>
									@Html.DisplayFor(modelItem => modelItem.Address.Zip)
								</td>

							</tr>
						</tbody>
					</table>
				</div>
			</div>
            <!--end of panel view for shiping address-->
			</div>
			
		</div>

</div>



